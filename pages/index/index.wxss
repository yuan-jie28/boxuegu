@import '/public/font/sousuo.wxss';
/*logo图片与搜索样式*/
.img{
  background: #ffffff;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 0 15rpx;
}
image{
  width: 182rpx;
  height: 52rpx;
}
.lunbo image{
  width: 750rpx;
  height: 300rpx;
}
/* 课程样式 */
.lessons{
  /* height: 200rpx; */
  background: #fff;
  display: flex;
  align-content: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
}
.lessons view{
  display: flex;
  flex-direction: column;
}
.icon{
  width: 74rpx;
  height: 74rpx;
  margin: 0 auto 10rpx;
}
/* 就业列表样式 */
.list{
  margin-top: 20rpx;
  background: #fff;
}
.list-nav{
  display: flex;
  justify-content: space-between;
  padding: 0 30rpx;
  font-size: 14px;
}
.list-item{
  display: flex;
  justify-content: space-around;
  padding: 30rpx 26rpx;
}
.list-item-left image{
  width: 360rpx;
  height: 200rpx;
}
.list-item-right{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-content: center;
  font-size: 10px;
  padding-left: 50rpx;
}
.list-item-right-font{
  font-size: 14px;
  color: #333333;
}
.list-item-right-color{
  color: #999999;
}
.list-item-button{
  display: flex;
  justify-content: space-between;
  color: #666666;
}
.list-item-button-color{
  color: red;

}
/* 推荐课程样式 */
.recommend{
  margin-top: 20rpx;
  background: #fff;
}
.recommend-nav{
  display: flex;
  justify-content: space-between;
  padding: 0 30rpx;
  font-size: 14px;
}
.recommend-top{
  display: flex;
  justify-content: space-around;
  margin-top: 30rpx;
}
.recommend-top image{
  width: 330rpx;
  height: 186rpx; 
}
.recommend-font{
  font-size: 14px;
  color: #333333;
}
.recommend-button{
  display: flex;
  justify-content: space-between;
}
.recommend-button-left{
  margin-top: 5rpx;
  font-size: 10px;
  color: #666666;
}
.recommend-button-right{
  margin-top: 5rpx;
  font-size: 10px;
  color: red;
}
